#==============================================================================#
#                                    NAMES                                     #
#==============================================================================#

NAME = push_swap
CC = gcc
CFLAGS = -Wall -Werror -Wextra -g
RM = -rm -f
LIBFT = libft/libft.a

#==============================================================================#
#                                    FILES                                     #
#==============================================================================#

SRCS = 

OBJS = $(SRCS:%.c=%.o)

#==============================================================================#
#                                    RULES                                     #
#==============================================================================#

all: $(NAME)

$(LIBFT):
	@$(MAKE) -C ./libft

$(NAME): $(OBJS) $(LIBFT)
	@$(CC) $(CFLAGS) $(OBJS) $(LIBFT) -o $(NAME)

clean:
	@$(MAKE) clean -C ./libft
	@$(RM) $(OBJS)

fclean: clean
	@$(MAKE) fclean -C ./libft
	@$(RM) $(NAME)

re: fclean all

PHONY: all clean fclean re


